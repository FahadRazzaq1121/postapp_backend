{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "express", "multer"]
  },
  "include": ["src/**/*", "src/@types/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
